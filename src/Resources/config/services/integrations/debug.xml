<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="sylius.context.theme.fake_theme.persister" class="Sylius\Bundle\ThemeBundle\Context\FakeTheme\FakeThemePersister">
            <argument type="service" id="sylius.context.theme.fake_theme.name_provider" />
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" priority="-8192" />
        </service>

        <service id="sylius.context.theme.fake_theme.name_provider" class="Sylius\Bundle\ThemeBundle\Context\FakeTheme\FakeThemeNameProvider" public="false" />
        <service id="Sylius\Bundle\ThemeBundle\Context\FakeTheme\FakeThemeNameProviderInterface" alias="sylius.context.theme.fake_theme.name_provider" />

        <service id="sylius.context.theme.fake_theme.context" class="Sylius\Bundle\ThemeBundle\Context\FakeTheme\FakeThemeContext"
                 public="false" decorates="Sylius\Bundle\ThemeBundle\Context\ThemeContextInterface" decoration-priority="-8192" >
            <argument type="service" id="sylius.context.theme.fake_theme.context.inner"/>
            <argument type="service" id="sylius.context.theme.fake_theme.name_provider"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="sylius.repository.theme"/>
        </service>
    </services>
</container>
